# Environment Configuration
ENVIRONMENT=development  # development, production

# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (Production)
DB_NAME=github_analyzer
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Celery Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_ALWAYS_EAGER=False
USE_MEMORY_BROKER=False

# GitHub API Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_WEBHOOK_SECRET=your-webhook-secret

# AI Provider API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# JWT Configuration
JWT_SIGNING_KEY=your-jwt-signing-key

# Email Configuration (Production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@github-analyzer.com
SERVER_EMAIL=server@github-analyzer.com

# Admin Configuration
ADMIN_URL=admin/
ADMIN_EMAIL=admin@github-analyzer.com

# Monitoring (Production)
SENTRY_DSN=your-sentry-dsn
APP_VERSION=1.0.0

# Backup Configuration (Production)
BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_WEBHOOKS=True
ENABLE_ANALYTICS=True
ENABLE_EXPORT_SCHEDULING=True
ENABLE_TEAM_FEATURES=True

# Development Settings
DEBUG_SQL=False
USE_DEBUG_TOOLBAR=False
SHELL_PLUS_PRINT_SQL=False

# SSL/TLS Configuration (Production)
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000

# CORS Configuration (Production)
CORS_ALLOWED_ORIGINS=https://github-analyzer.com,https://www.github-analyzer.com,https://app.github-analyzer.com

# Domain Configuration (Production)
DOMAIN_NAME=github-analyzer.com
API_DOMAIN=api.github-analyzer.com
APP_DOMAIN=app.github-analyzer.com

# Traefik Configuration
TRAEFIK_API_DASHBOARD=true
TRAEFIK_API_INSECURE=false
ACME_EMAIL=admin@github-analyzer.com

# Docker Configuration
COMPOSE_PROJECT_NAME=github-analyzer
DOCKER_BUILDKIT=1

# Performance Settings
WORKER_CONNECTIONS=1000
WORKER_PROCESSES=auto
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json